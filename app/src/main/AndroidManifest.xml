<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos para geolocalización -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Permisos para cámara -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    
    <!-- Permisos para almacenamiento -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechStore"
        tools:targetApi="31">
        
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.TechStore.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".ProductsActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".ProductFormActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".ProductDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".OrdersHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".FavoritesActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".LocationActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <activity
            android:name=".StoresMapActivity"
            android:exported="false"
            android:theme="@style/Theme.TechStore" />
            
        <!-- FileProvider para compartir archivos con la cámara -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="androidx.core.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Meta-data para Google Maps API -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY_HERE" />
    </application>

</manifest>
